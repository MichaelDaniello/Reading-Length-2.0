{
    "name": "reading-length-prod",
    "alias": "prod.readinglength.com",
    "env": {
        "SERVER": "production"
    },
    "version": 2,
    "builds": [
        { "src": "package.json", "use": "@now/next" }
    ],
    "routes": [
        { "src": "/book/isbn-(?<isbn>[^/]*)", "dest": "/book?isbn=$isbn" },
        { "src": "/book/isbn-(?<isbn>[^/]*)/", "status": 301, "dest": "/book?isbn=$isbn" },
        { "src": "/wpm/(?<id>[^/]*)", "dest": "/wpm?id=$id" },
        { "src": "/wpm/(?<id>[^/]*)/", "status": 301, "dest": "/wpm?id=$id" }
    ]
  }